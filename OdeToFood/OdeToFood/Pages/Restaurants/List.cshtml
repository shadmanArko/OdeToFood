@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <button class="btn btn-dark"> Search </button>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td> @restaurant.Name </td>
            <td> @restaurant.Location </td>
            <td> @restaurant.Cuisine</td>
            <td>
                <a class="btn btn-dark" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    Details
                </a>
                <a class="btn btn-dark" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    Edit
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-dark"> Add New </a>

<div>@Model.Massage</div>


